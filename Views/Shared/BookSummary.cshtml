@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            Book Title: @Model.Title
            <span class="badgee badge-pill badge-pimary" style="float:right">
                <p>Author: @Model.AuthorFirstName @Model.AuthorMiddleName @Model.AuthorLastName</p>
            </span>
        </h4>
    </div>
    <p>Publisher: @Model.Publisher</p>
    <p>ISBN: @Model.ISBN</p>
    <p>Classification: @Model.Classification</p>
    <p>Category: @Model.Category</p>
    <p>Price: @Model.Price</p>
    <p>Number of Pages: @Model.NumberOfPages</p>

    <form id="@Model.BookId" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Add to Cart
            </button>
        </span>
    </form>
</div>





